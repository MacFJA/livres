{% extends '@EasyAdmin/page/blank.html.twig' %}

{% block content_title %}Display Settings{% endblock %}

{% block content %}
    <div class="content">
        <section class="content-header">
            <div class="justify-content-between">
                <div class="content-header-title"><h1 class="title">{{ block('content_title') }}</h1></div>
            </div>
        </section>
        <section id="main" class="content-body">
            <form method="post" action="{{ path('admin_display_settings_post') }}">
                <div class="form-group row">
                    <label for="per-page" class="col-form-label">Books per page</label>
                    <div class="form-widget">
                        <input type="number" min="2" class="form-control" id="per-page" name="per_page" placeholder="Number of books per pages" value="{{ per_page | escape('html_attr') }}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="default-sort" class="col-form-label">Default sort</label>
                    <div class="form-widget">
                        <select class="form-control" id="default-sort" name="default_sort">
                            {% for value,label in constant('App\\Controller\\AdminController::AVAILABLE_SORT') %}
                                <option value="{{ value }}" {% if default_sort == value %}selected{% endif %}>{{ label }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">

                    </div>
                </div>

                <section class="content-footer">
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary action-save">
                            <span class="btn-label">Save changes</span>
                        </button>
                    </div>
                </section>
            </form>
        </section>
    </div>
{% endblock %}